<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dbsecolor"
    >
    <TextView
        android:id="@+id/View_Profile_textincircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="13dp"
        android:textColor="@android:color/black"
        android:background="@drawable/circleshape"/>
    <TextView
        android:id="@+id/View_Profile_username_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_Profile_textincircle"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor = "@color/white"/>
    <TextView
        android:id="@+id/View_Profile_email_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/View_Profile_username_header"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor = "@color/white"/>

    <RelativeLayout
        android:id="@+id/username_viewprofile_Relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View_Profile_email_header"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/username_viewprofile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singupusername"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/username_viewprofile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username_viewprofile1"
            android:paddingLeft="8dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_viewprofile_Relative"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/Gender_viewprofile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/Gender_viewprofile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Gender_viewprofile1"
            android:paddingLeft="8dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>